@model CMCS.Models.Claim
@{
    ViewBag.Title = "Submit Claim";
}
<h2>Submit Claim</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div>
        <label>Lecturer Name</label>
        <input asp-for="LecturerName" />
        <span asp-validation-for="LecturerName"></span>
    </div>
    <div>
        <label>Hours Worked</label>
        <input asp-for="HoursWorked" />
        <span asp-validation-for="HoursWorked"></span>
    </div>
    <div>
        <label>Hourly Rate</label>
        <input asp-for="HourlyRate" />
        <span asp-validation-for="HourlyRate"></span>
    </div>
    <div>
        <label>Notes</label>
        <textarea asp-for="Notes"></textarea>
    </div>
    <div>
        <label>Upload Supporting File (.pdf, .docx, .xlsx, max 5MB)</label>
        <input type="file" name="upload" />
    </div>
    <button type="submit">Submit Claim</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

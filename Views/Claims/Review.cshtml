@model IEnumerable<CMCS.Models.Claim>
<h2>Pending Claims (Manager View)</h2>

<table border="1" cellpadding="5">
    <thead>
        <tr>
            <th>ID</th>
            <th>Lecturer</th>
            <th>Total</th>
            <th>File</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.LecturerName</td>
                <td>@c.Total</td>
                <td>
                    @if (!string.IsNullOrEmpty(c.UploadedFileName))
                    {
                        <a asp-action="Download" asp-route-file="@c.UploadedFileName">File</a>
                    }
                </td>
                <td>
                    <form asp-action="Approve" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@c.Id" />
                        <button type="submit">Approve</button>
                    </form>
                    <form asp-action="Reject" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@c.Id" />
                        <input type="text" name="reason" placeholder="Reason" />
                        <button type="submit">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
